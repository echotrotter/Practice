def word_guessed(letters_guessed):
	answer = []
	for letters in secret_word:
		if letters in letters_guessed:
			answer.append(letters)
			check = ''.join(answer)
			if check == secret_word:
				print('Solved! Secret word: ' + secret_word)
				exit()

def print_guessed(letters_guessed):
	character_list = []
	for letters in secret_word:
		if letters in letters_guessed:
			character_list.append(letters)
		else:
			character_list.append('-')
	blank = ''.join(character_list)
	return blank
	
while mistakes_made < MAX_GUESSES:
print('Project 1 - Hangman')
secret_word = 'claptrap'
letters_guessed = []
mistakes_made = 0
MAX_GUESSES = 6
character_list = True

	print('Guesses left: ' + str(MAX_GUESSES - mistakes_made))
	print(print_guessed(letters_guessed))
	print(letters_guessed)
	
	player = input('Enter a letter: ')
	letters_guessed.append(player.lower())
	
	word_guessed(letters_guessed)
	
	if player == secret_word:
		print('Solved! Secret word: ' + secret_word)
		exit()
	
	if len(player) == len(secret_word) and \
	player != secret_word:
		mistakes_made += 2
		print('Mistake!')
		
	if player not in secret_word or \
	player == range(0, 9):
		mistakes_made += 1
		print('Mistake!')
	
	if mistakes_made == 2:
		print(stage1)
		print(stage2)
	if mistakes_made == 3:
		print(stage1)
		print(stage2)
		print(stage3)
	if mistakes_made == 4:
		print(stage1)
		print(stage2)
		print(stage3)
		print(stage4)
	if mistakes_made == 5:
		print(stage1)
		print(stage2)
		print(stage3)
		print(stage4)
		print(stage5)
	if mistakes_made == 6:
		print(stage1)
		print(stage2)
		print(stage3)
		print(stage4)
		print(stage5)
		print(stage6)
		print(stage7)
		print(stage8)
